{
  "name": "hemantdoc-scriptwriter-pro-electron",
  "version": "3.0.0",
  "description": "HemantDoc ScriptWriter Pro - Professional Screenplay Editor (Electron)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "npm run build"
  },
  "build": {
    "appId": "com.hemantdoc.scriptwriter-pro",
    "productName": "HemantDoc ScriptWriter Pro",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "splash.html",
      "../dist/**/*",
      "../assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip", 
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "../assets/icons/icon.png",
      "entitlements": "entitlements.mac.plist",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "../assets/icons/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "category": "Office"
    },
    "publish": {
      "provider": "github",
      "owner": "hemantdoc12",
      "repo": "hemantdoc-scriptwriter-pro"
    }
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "electron-updater": "^6.0.0"
  }
}